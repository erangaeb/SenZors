<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_shape"
        android:layout_gravity="center">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/dialog_header_shape">
            <TextView
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/logo_text"
                    android:layout_centerVertical="true"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="#"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_shape_gray">
            </TextView>

            <TextView
                    android:id="@+id/information_message_dialog_layout_message_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/logo_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp">

            <TextView
                    android:text="message"
                    android:id="@+id/information_message_dialog_layout_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000">
            </TextView>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>