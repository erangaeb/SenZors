<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#444444">


    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/oneImgView"
                android:src="@drawable/logo2"
                android:layout_width="78dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:layout_height="78dp">
        </ImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:id="@+id/sensor_text"
                android:textColor="#ffc027"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="senZors">
        </TextView>
        <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:gravity="center_horizontal"
                android:id="@+id/sensor_text1"
                android:textStyle="bold"
                android:textColor="#ffc027"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:text="#GET #PUT #SHARE #DATA">
        </TextView>-->

    </LinearLayout>


    <ScrollView
            android:layout_width="fill_parent"
            android:fillViewport="true"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp">

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="15dp"
                        android:hint="Email"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/username_field_shape"
                        android:id="@+id/login_layout_username">

                </EditText>

                <EditText
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:hint="Password"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColorHint="#ffffff"
                        android:layout_height="40dp"
                        android:textColor="#ffffff"
                        android:singleLine="true"
                        android:password="true"
                        android:background="@drawable/username_field_shape"
                        android:layout_below="@+id/login_layout_username"
                        android:id="@+id/login_layout_password">
                </EditText>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_centerVertical="true"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/login_button_selector"
                        android:id="@+id/login_button_panel">
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#4a4a4a"
                            android:id="@+id/edit_invoice_layout_mark_as_paid_text"
                            android:text="Sign in">
                    </TextView>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>





