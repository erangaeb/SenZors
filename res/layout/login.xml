<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffffff">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/oneImgView"
                android:src="@drawable/lg2"
                android:layout_width="58dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:layout_height="58dp">
            </ImageView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34sp"
                    android:id="@+id/sensor_text"
                    android:textColor="#985a30"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="SenZors">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:gravity="center_horizontal"
                android:id="@+id/sensor_text1"
                android:textStyle="bold"
                android:textColor="#985a30"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:text="@string/des">
            </TextView>

        </LinearLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp">

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="15dp"
                        android:hint="Email"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/username_field_shape"
                        android:id="@+id/login_layout_username">

                </EditText>

                <EditText
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:hint="Password"
                        android:textSize="16sp"
                        android:layout_height="45dp"
                        android:singleLine="true"
                        android:password="true"
                        android:background="@drawable/password_field_shape"
                        android:layout_below="@+id/login_layout_username"
                        android:id="@+id/login_layout_password">
                </EditText>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <RelativeLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="6dp"
                        android:layout_centerVertical="true"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/login_button_selector"
                        android:id="@+id/login_button_panel">
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#985a30"
                            android:id="@+id/edit_invoice_layout_mark_as_paid_text"
                            android:text="Sign in">
                    </TextView>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>





